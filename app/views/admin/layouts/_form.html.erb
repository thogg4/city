<%= form_for [:admin, @site, @layout], :html => {:class => "full"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body, :class => 'ace-editor' %>
  <div class='ace-editor-wrapper'>
    <div id='ace-editor'></div>
  </div>
  <p class="help-block">
    Use {{ page }} to show where the page should be placed
  </p>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>

<% end %>
