<%= form_for [:admin, @site, @page], :html => {:class => "full"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :path %>
  <%= f.text_field :path %>
  <p class="help-block">
    Leave this blank if you want this to be the home page
  </p>

  <%= f.label :body %>
  <%= f.text_area :body, :class => 'ace-editor' %>
  <div class='ace-editor-wrapper'>
    <div id='ace-editor'></div>
  </div>

  <%= f.label "Layout" %>
  <%= f.select :layout_id, @site.layouts.collect{ |l| [l.title, l.id] } %>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
