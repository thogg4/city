<%= form_for [:admin, @site, @article], :html => {:class => "full"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label :tags %>
  <%= f.text_field :tags %>

  <div class="form_actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
