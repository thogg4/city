# use thin server
gem 'thin'

# authentication
gem 'bcrypt-ruby'

# assets
gem 'sass-rails'
gem 'jquery-rails'
gem 'uglifier'
gem 'therubyracer'

# background tasks
gem 'resque', "1.9", :require => "resque/server"
